<%= form_tag ('/search') do %>
	<%= text_field_tag :search_field, params[:search_field]%>
	<%= submit_tag :search%>
<%end%>
<%= "#{@results.count} Result#{@results.count != 1 ? 's' : ''}"%><br/>
<%=link_to "Clear Search", "/search"%>
<br/>

<br/>

<% @results.each do |result|%>
	<b><%= result.record_name%></b>
	<br/>
	<%=result.record_body%>
	<br/><br/>
<%end%>